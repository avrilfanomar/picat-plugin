<templateSet group="Picat">
  <!-- if-then -->
  <template name="if" value="if $COND$ then&#10;    $END$&#10;end" description="if-then" toReformat="true" toShortenFQNames="false">
    <variable name="COND" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PICAT" value="true" />
    </context>
  </template>

  <!-- if-then-else -->
  <template name="ife" value="if $COND$ then&#10;    $THEN$&#10;else&#10;    $ELSE$&#10;end" description="if-then-else" toReformat="true" toShortenFQNames="false">
    <variable name="COND" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="THEN" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="ELSE" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PICAT" value="true" />
    </context>
  </template>

  <!-- if-elseif-else -->
  <template name="ifel" value="if $COND$ then&#10;    $THEN$&#10;elseif $COND2$ then&#10;    $THEN2$&#10;else&#10;    $ELSE$&#10;end" description="if-elseif-else" toReformat="true" toShortenFQNames="false">
    <variable name="COND" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="THEN" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="COND2" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="THEN2" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="ELSE" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PICAT" value="true" />
    </context>
  </template>

  <!-- foreach loop -->
  <template name="foreach" value="foreach ($ITER$ in $COLL$)&#10;    $BODY$&#10;end" description="foreach loop" toReformat="true" toShortenFQNames="false">
    <variable name="ITER" expression="" defaultValue="X" alwaysStopAt="true" />
    <variable name="COLL" expression="" defaultValue="L" alwaysStopAt="true" />
    <variable name="BODY" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PICAT" value="true" />
    </context>
  </template>

  <!-- while loop -->
  <template name="while" value="while ($COND$)&#10;    $BODY$&#10;end" description="while loop" toReformat="true" toShortenFQNames="false">
    <variable name="COND" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="BODY" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PICAT" value="true" />
    </context>
  </template>

  <!-- loop ... while -->
  <template name="loopw" value="loop&#10;    $BODY$&#10;while ($COND$)" description="loop ... while" toReformat="true" toShortenFQNames="false">
    <variable name="BODY" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="COND" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PICAT" value="true" />
    </context>
  </template>

  <!-- try-catch -->
  <template name="try" value="try&#10;    $BODY$&#10;catch ($EXC$)&#10;    $CATCH$&#10;end" description="try-catch" toReformat="true" toShortenFQNames="false">
    <variable name="BODY" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="EXC" expression="" defaultValue="E" alwaysStopAt="true" />
    <variable name="CATCH" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PICAT" value="true" />
    </context>
  </template>

  <!-- try-catch-finally -->
  <template name="tryf" value="try&#10;    $BODY$&#10;catch ($EXC$)&#10;    $CATCH$&#10;finally&#10;    $FINALLY$&#10;end" description="try-catch-finally" toReformat="true" toShortenFQNames="false">
    <variable name="BODY" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="EXC" expression="" defaultValue="E" alwaysStopAt="true" />
    <variable name="CATCH" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="FINALLY" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PICAT" value="true" />
    </context>
  </template>

  <!-- guard condition -->
  <template name="guard" value="$HEAD$ ?=> $GUARD$ | $BODY$." description="guard condition" toReformat="true" toShortenFQNames="false">
    <variable name="HEAD" expression="" defaultValue="pred" alwaysStopAt="true" />
    <variable name="GUARD" expression="" defaultValue="true" alwaysStopAt="true" />
    <variable name="BODY" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PICAT" value="true" />
    </context>
  </template>

  <!-- list comprehension -->
  <template name="listcomp" value="[$EXPR$ : $VAR$ in $LIST$, $COND$]" description="list comprehension" toReformat="true" toShortenFQNames="false">
    <variable name="EXPR" expression="" defaultValue="X" alwaysStopAt="true" />
    <variable name="VAR" expression="" defaultValue="X" alwaysStopAt="true" />
    <variable name="LIST" expression="" defaultValue="L" alwaysStopAt="true" />
    <variable name="COND" expression="" defaultValue="true" alwaysStopAt="true" />
    <context>
      <option name="PICAT" value="true" />
    </context>
  </template>

  <!-- array comprehension -->
  <template name="arraycomp" value="{$EXPR$ : $VAR$ in $LIST$, $COND$}" description="array comprehension" toReformat="true" toShortenFQNames="false">
    <variable name="EXPR" expression="" defaultValue="X" alwaysStopAt="true" />
    <variable name="VAR" expression="" defaultValue="X" alwaysStopAt="true" />
    <variable name="LIST" expression="" defaultValue="L" alwaysStopAt="true" />
    <variable name="COND" expression="" defaultValue="true" alwaysStopAt="true" />
    <context>
      <option name="PICAT" value="true" />
    </context>
  </template>

  <!-- predicate rule -->
  <template name="pred" value="$NAME$($ARGS$) =>&#10;    $BODY$." description="predicate rule" toReformat="true" toShortenFQNames="false">
    <variable name="NAME" expression="" defaultValue="pred_name" alwaysStopAt="true" />
    <variable name="ARGS" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="BODY" expression="" defaultValue="true" alwaysStopAt="true" />
    <context>
      <option name="PICAT" value="true" />
    </context>
  </template>

  <!-- function rule -->
  <template name="func" value="$NAME$($ARGS$) = $EXPR$ =>&#10;    $BODY$." description="function rule" toReformat="true" toShortenFQNames="false">
    <variable name="NAME" expression="" defaultValue="func_name" alwaysStopAt="true" />
    <variable name="ARGS" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="EXPR" expression="" defaultValue="Result" alwaysStopAt="true" />
    <variable name="BODY" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PICAT" value="true" />
    </context>
  </template>

  <!-- fact -->
  <template name="fact" value="$NAME$($ARGS$)." description="fact" toReformat="true" toShortenFQNames="false">
    <variable name="NAME" expression="" defaultValue="fact_name" alwaysStopAt="true" />
    <variable name="ARGS" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PICAT" value="true" />
    </context>
  </template>

  <!-- main entry point -->
  <template name="main" value="main =>&#10;    $BODY$." description="main entry point" toReformat="true" toShortenFQNames="false">
    <variable name="BODY" expression="" defaultValue="println(&quot;Hello, Picat!&quot;)" alwaysStopAt="true" />
    <context>
      <option name="PICAT" value="true" />
    </context>
  </template>
</templateSet>
